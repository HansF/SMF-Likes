<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>sid2varun:like_posts</id>
	<name>Like Posts</name>
	<version>1.3.1</version>
	<type>modification</type>

	<install for="2.0 - 2.0.99">
		<readme type="file" parsebbc="true">readme.txt</readme>
		<require-file name="Sources/LikePostsHooks.php" destination="$sourcedir">File to add all hooks</require-file>
		<require-file name="Sources/LikePostsAdmin.php" destination="$sourcedir">Admin panel of mod</require-file>
		<require-file name="Sources/LikePostsProfile.php" destination="$sourcedir">Profile panel of mod</require-file>
		<require-file name="Sources/LikePosts.php" destination="$sourcedir">Controller of user interface</require-file>
		<require-file name="Sources/Subs-LikePosts.php" destination="$sourcedir">Database handler</require-file>
		<require-file name="Themes/default/LikePosts.template.php" destination="$themedir">View of mod</require-file>
		<require-file name="Themes/default/css/LikePosts.css" destination="$themedir/css">CSS of mod</require-file>
		<require-file name="Themes/default/images/no_avatar.png" destination="$imagesdir">No avatar image of mod</require-file>
        <require-file name="Themes/default/images/progress_bar.gif" destination="$imagesdir">Lovely Progress bar</require-file>
		<require-file name="Themes/default/languages/LikePosts.english.php" destination="$languagedir">All language Strings</require-file>
		<require-file name="Themes/default/scripts/LikePosts.js" destination="$themedir/scripts">JS file of mod</require-file>
		<database>install.php</database>
		<modification>Modification.xml</modification>
		<redirect url="?action=admin;area=likeposts" type="inline" timeout="2000">Please stand by while you are being redirected to this modification's configuration settings.</redirect>
	</install>

	<uninstall for="2.0 - 2.0.99">
	    <code>uninstall.php</code>
		<remove-file name="$sourcedir/LikePostsHooks.php" />
		<remove-file name="$sourcedir/LikePostsAdmin.php" />
		<remove-file name="$sourcedir/LikePostsProfile.php" />
		<remove-file name="$sourcedir/LikePosts.php" />
		<remove-file name="$sourcedir/Subs-LikePosts.php" />
		<remove-file name="$themedir/LikePosts.template.php" />
		<remove-file name="$themedir/css/likeposts.css" />
		<remove-file name="$themedir/images/no_avatar.png" />
        <remove-file name="$themedir/images/progress_bar.gif" />
		<remove-file name="$languagedir/LikePosts.english.php" />
		<remove-file name="$themedir/scripts/LikePosts.js" />
		<modification reverse="true">Modification.xml</modification>
		<redirect url="$scripturl?action=admin;area=packages;sa=browse" timeout="1000" />
	</uninstall>
</package-info>