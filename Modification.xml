<modification xmlns="http://www.simplemachines.org/xml/modification" xmlns:smf="http://www.simplemachines.org/">
	<id>sid2varun:like_posts</id>
	<version>1.0</version>

	<file name="$themedir/Display.template.php">
		<operation>
			<search position="after"><![CDATA[// Can they reply? Have they turned on quick reply?]]></search>
			<add><![CDATA[LP_isPostLiked($context['like_posts']['msgs_liked_data'], $message['id']);
		echo '
									<li class="split_button"><span id="like_count_'. $message['id'] .'">', $context['like_posts']['single_msg_data']['count'],'</span><a id="like_',$message['id'],'" href="javascript:void(0)" onclick="lpObj.likeUnlikePosts(', $message['id'],', ',$context['current_topic'],', ',$context['current_board'],')">', $context['like_posts']['single_msg_data']['text'],'</a></li>';

		]]></add>
		</operation>
	</file>
	<file name="$sourcedir/Display.php">
		<operation>
			<search position="after"><![CDATA[// Guests can't mark topics read or for notifications, just can't sorry.]]></search>
			<add><![CDATA[require_once($sourcedir . '/LikePosts.php');
	$topic_liked_data = LP_getTopicsInfo($messages);
	$context['like_posts']['msgs_liked_data'] = isset($topic_liked_data) ? $topic_liked_data : '';

	]]></add>
		</operation>
	</file>
</modification>
